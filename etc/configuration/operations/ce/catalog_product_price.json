{
  "shortcuts": {
    "ce": {
      "catalog_product_price": {
        "add-update": [
          "general/general/move-files",
          "general/general/cache-warmer",
          "general/general/global-data",
          "general/catalog_product_price/validate",
          "ce/catalog_product_price/add-update"
        ]
      }
    }
  },
  "operations": {
    "general": {
      "catalog_product_price": [
        {
          "name": "validate",
          "plugins": [
            {
              "id": "import.plugin.subject",
              "listeners": [
                {
                  "plugin.process.success": [
                    "import.listener.stop.validation"
                  ]
                }
              ],
              "subjects": [
                {
                  "id": "import.subject.validator",
                  "create-imported-file": false,
                  "file-resolver": {
                    "prefix": "product-import"
                  },
                  "params" : {
                    "custom-validations" : {
                      "sku" :  [ "/.+/" ]
                    }
                  },
                  "observers": [
                    {
                      "import": [
                        "import.observer.validator.generic"
                      ]
                    }
                  ],
                  "callbacks": [
                    {
                      "sku": [ "import.callback.custom.regex.validator" ],
                      "store_view_code": [ "import.callback.store.view.code.validator" ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    "ce": {
      "catalog_product_price": [
        {
          "name": "add-update",
          "plugins": [
            {
              "id": "import.plugin.subject",
              "subjects": [
                {
                  "id": "import_product.subject.bunch",
                  "file-resolver": {
                    "prefix": "product-import-price"
                  },
                  "params": {
                    "clean-up-empty-columns": [
                      "special_price",
                      "special_price_from_date",
                      "special_price_to_date"
                    ]
                  },
                  "observers": [
                    {
                      "import": [
                        "import_product.observer.composite.price.add_update"
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  }
}